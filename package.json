{
  "name": "next-mechanical-workshop",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "email": "lualsiv@gmail.com",
    "name": "Luis Alberto",
    "url": "https://github.com/lualsiv"
  },
  "private": "true",
  "workspaces": {
    "packages": [
      "src/*"
    ]
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:frontend": "yarn workspace frontend dev",
    "build": "run-s build:*",
    "build:domain": "yarn workspace domain build",
    "build:schema": "yarn workspace schema build",
    "build:infra": "yarn workspace infra build",
    "build:frontend": "yarn workspace frontend build",
    "rebuild": "run-s rebuild:*",
    "rebuild:common": "yarn workspace common rebuild",
    "rebuild:schema": "yarn workspace schema rebuild",
    "rebuild:domain": "yarn workspace domain rebuild",
    "rebuild:infra": "yarn workspace infra rebuild",
    "rebuild:frontend": "yarn workspace frontend rebuild",
    "start": "run-p start:*",
    "start:frontend": "yarn workspace frontend start",
    "fix": "run-s typecheck lint format",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix ./src",
    "format": "prettier --write -l \"./src/**/*.{js,ts,graphql}\"",
    "test": "run-s test:*",
    "test:domain": "yarn workspace domain test",
    "codegen": "run-s codegen:schema",
    "codegen:schema": "yarn workspace schema codegen",
    "setup": "run-s rebuild setup:domain setup:infra setup:frontend",
    "setup:domain": "yarn workspace domain setup",
    "setup:infra": "yarn workspace infra setup",
    "setup:frontend": "yarn workspace frontend setup",
    "setup:env": "run-p setup:env:domain setup:env:infra setup:frontend",
    "setup:env:domain": "yarn workspace domain setup:env",
    "setup:env:infra": "yarn workspace infra setup:env",
    "setup:env:frontend": "yarn workspace frontend setup:env"
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/introspection": "^1.18.1",
    "@graphql-codegen/schema-ast": "^1.18.1",
    "@graphql-codegen/typescript": "^1.21.1",
    "@graphql-codegen/typescript-graphql-request": "^3.1.0",
    "@graphql-codegen/typescript-operations": "^1.17.15",
    "@graphql-codegen/typescript-resolvers": "^1.19.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-standard": "5.0.0",
    "graphql": "^15.5.0",
    "husky": "5.2.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
